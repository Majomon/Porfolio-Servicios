---
import Title from "../Title.astro";
import SubTitleText from "../../components/SubTitleText.astro";
import Formulary from "../Preact/Formulary";
import { listSocialMedia } from "../../types/ListSocialMedia";

export const prerender = true;
---

<section class="w-11/12 mx-auto flex flex-col gap-y-20 mt-32 h-fit">
  <article class="w-fit max-w-[600px] mx-auto flex flex-col gap-y-3">
    <Title nameTitle="Contacto" />
    <SubTitleText
      textP=`¿Listo para llevar tu proyecto al siguiente nivel? ¡Hablemos!`
    />
  </article>
  <article
    class="relative flex flex-col lg:flex-row items-start justify-between gap-4"
  >
    <div
      class="bg-[#5CB672]/30 rounded-full w-[278px] h-[278px] absolute left-[25%] top-1/2 lg:-bottom-24 -z-10 blur-[140px]"
    >
    </div>

    <div class="bg-[#040D07] w-full lg:w-[570px] h-[500px] rounded-2xl p-5">
      <Formulary client:visible />
    </div>

    <div class="flex justify-between flex-col gap-y-4 w-full lg:w-1/2">
      {
        listSocialMedia.map((item) => {
          return (
            <a class="flex items-center gap-x-6 w-[300px]" href={`${item.url}`}>
              <div set:html={item.svg} />
              <p
                class=" text-white text-sm font-normal hyphens-manual w-[80%]"
                id="titleSocialMedia"
              >
                {item.title}
              </p>
            </a>
          );
        })
      }
    </div>
  </article>
</section>
